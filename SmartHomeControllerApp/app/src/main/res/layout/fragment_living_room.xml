<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.LivingRoomFragment">

    <TextView
        android:id="@+id/lightsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Lights Section"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchLivingRoomLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Living Room Light"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:switchMinWidth="50dp"
        app:switchPadding="25dp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchBedroomLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Bedroom Light"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:switchMinWidth="50dp"
        app:switchPadding="25dp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchKitchenLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Kitchen Light"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:switchMinWidth="50dp"
        app:switchPadding="25dp" />

    <TextView
        android:id="@+id/thermostatControlSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Thermostat Section"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/thermostatValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="22Â°C"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/thermostatSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Adjust the thermostat temperature"
        android:labelFor="@+id/thermostatValue"
        android:padding="8dp"
        android:value="22"
        android:valueFrom="0"
        android:valueTo="30"
        app:thumbRadius="12dp"
        app:trackHeight="4dp" />

    <Button
        android:id="@+id/saveSettingButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="Save Settings"
        android:textSize="18sp" />

</LinearLayout>